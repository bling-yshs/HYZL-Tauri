{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "HYZL-Tauri",
    "version": "0.0.15"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "all": false,
      "http": {
        "scope": ["https://*", "http://*"],
        "all": true
      },
      "fs": {
        "scope": ["**"],
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.hyzl.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": ["msi","updater"],
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/bling-yshs/HYZL-Tauri/releases/download/latest/latest.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBRUYzM0I5RjAxRjhCQjEKUldTeGl4L3d1VFB2NnFqSXdOTFB4WUR1WHhJeHZXbXFHYmR0bTh0MGhMbDVDNGFselZtSHNWWFkK"
    },
    "windows": [
      {
        "center": true,
        "fullscreen": false,
        "height": 570,
        "resizable": true,
        "title": "Hello Yunzai Launcher",
        "width": 900,
        "label": "main",
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
