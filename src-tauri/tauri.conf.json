{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "HYZL-Tauri",
    "version": "0.3.6"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "scope": [
          "https://*",
          "http://*"
        ]
      },
      "fs": {
        "scope": [
          "**"
        ]
      },
      "shell": {
        "scope": [
          {
            "name": "ps",
            "args": true,
            "cmd": "powershell"
          },
          {
            "name": "cmd",
            "args": true,
            "cmd": "cmd"
          },
          {
            "name": "git",
            "args": true,
            "cmd": "git"
          },
          {
            "name": "node",
            "args": true,
            "cmd": "node"
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.hyzl.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": [
        "msi",
        "updater"
      ],
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gitee.com/bling_yshs/hyzl-tauri-update/raw/main/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBRUYzM0I5RjAxRjhCQjEKUldTeGl4L3d1VFB2NnFqSXdOTFB4WUR1WHhJeHZXbXFHYmR0bTh0MGhMbDVDNGFselZtSHNWWFkK"
    },
    "windows": [
      {
        "center": true,
        "fullscreen": false,
        "height": 570,
        "resizable": true,
        "title": "Hello Yunzai Launcher",
        "width": 900,
        "label": "main",
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
